<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"

        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mysns.FeedDAO">

    <insert id = "insertFeed" parameterType="com.example.mysns.FeedVO"
            useGeneratedKeys="true" keyProperty="no">
        INSERT INTO feed (no, content, user_id, created_at)
        VALUES (#{content}, #{uerID}, #{createdAt});

    </insert>
    <select id = "selectAllFeed" resultType="com.example.myysns.FeedVO">
        SELECT * FROM feed ORDER BY no DESC
    </select>

    <select id = "selectFeed" resultType="com.example.mysns.Feed">
        SELECT * FROM feed WHERE no = #{no}
    </select>

    <delete id="deleteFeed" parameterType="int">
        DELETE FROM FEED WHERE no = #{no}
    </delete>


</mapper>